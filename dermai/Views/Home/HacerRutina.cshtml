@model dermai.Models.PielFormModel
@{
    Layout = null;
}
<form asp-action="GuardarFormularioRutina" asp-controller="User" method="post">
    @Html.AntiForgeryToken()
    <section class="hacerRutina">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">@TempData["Mensaje"]</div>
        }

        <div class="caracteristicas">
            <h2>¿Qué características tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var caracteristica in new[] {
                    "Piel sensible", "Enrojecimiento frecuente", "Tendencia al acné", "Sequedad / descamación",
                    "Opacidad / falta de luminosidad", "Poros dilatados", "Puntos negros",
                    "Manchas oscuras / hiperpigmentación", "Textura irregular", "Exceso de grasa / brillo",
                    "Líneas de expresión / arrugas"
                })
                {
                    <label>
                        <input type="checkbox" name="Caracteristicas" value="@caracteristica" @(Model?.Caracteristicas?.Contains(caracteristica) == true ? "checked=\"checked\"" : "") /> @caracteristica
                    </label>
                }
            </div>
        </div>

        <div class="preferencias">
            <h2>¿Qué preferencias de productos tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var preferencia in new[] {
                    "Productos sin fragancia", "Sin alcohol", "Silicona",
                    "Ingredientes naturales / orgánicos", "Sin parabenos", "Cruelty-Free", "Vegano"
                })
                {
                    <label>
                        <input type="checkbox" name="Preferencias" value="@preferencia" @(Model?.Preferencias?.Contains(preferencia) == true ? "checked=\"checked\"" : "") /> @preferencia
                    </label>
                }
            </div>
        </div>

        <div class="presupuesto">
            <h2>¿Cuál es tu presupuesto estimado?</h2>
            <div>
                <label>
                    <input type="radio" name="Presupuesto" value="Económico" required @(Model?.Presupuesto == "Económico" ? "checked" : "") /> Económico (hasta $50 USD)                </label>
                <label>
                    <input type="radio" name="Presupuesto" value="Medio" required @(Model?.Presupuesto == "Medio" ? "checked" : "") /> Medio (hasta $120 USD)                </label>
                <label>
                    <input type="radio" name="Presupuesto" value="Premium" required @(Model?.Presupuesto == "Premium" ? "checked" : "") /> Premium (desde $120 USD)                </label>
            </div>
        </div>

        <div class="frecuenciaRutinaria">
            <h2>¿Cuál es tu frecuencia de rutina ideal?</h2>
            <div>
                <label>
                    <input type="radio" name="Frecuencia" value="Simple" required @(Model?.Frecuencia == "Simple" ? "checked" : "") /> Rutina simple (1-3 pasos)                </label>
                <label>
                    <input type="radio" name="Frecuencia" value="Intermedia" required @(Model?.Frecuencia == "Intermedia" ? "checked" : "") /> Rutina intermedia (4-5 pasos)                </label>
                <label>
                    <input type="radio" name="Frecuencia" value="Completa" required @(Model?.Frecuencia == "Completa" ? "checked" : "") /> Rutina completa (6+ pasos)                </label>
            </div>
        </div>

        <input type="submit" value="Enviar" class="btn btn-primary mt-3" />
    </section>
</form>