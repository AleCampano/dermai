@model dermai.Models.PielFormModel
@{
    ViewData["Title"] = "Hacer Mi Rutina";
}



<form asp-action="GuardarFormularioRutina" asp-controller="User" method="post">
    @Html.AntiForgeryToken()

    <section class="hacerRutina">

        <div class="caracteristicas">
            <h2>¿Qué características tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var caracteristica in new[] {
                    "Piel sensible", "Enrojecimiento frecuente", "Tendencia al acné", "Sequedad / descamación",
                    "Opacidad / falta de luminosidad", "Poros dilatados", "Puntos negros",
                    "Manchas oscuras / hiperpigmentación", "Textura irregular", "Exceso de grasa / brillo",
                    "Líneas de expresión / arrugas"
                })
                {
                    <label>
                        <input type="checkbox" name="Caracteristicas" value="@caracteristica" @(Model != null && Model.Caracteristicas.Contains(caracteristica) ? "checked" : "") />
                        @caracteristica
                    </label>
                }
            </div>
        </div>

        <div class="preferencias">
            <h2>¿Qué preferencias de productos tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var preferencia in new[] {
                    "Productos sin fragancia", "Sin alcohol", "Silicona",
                    "Ingredientes naturales / orgánicos", "Sin parabenos", "Cruelty-Free", "Vegano"
                })
                {
                    <label>
                        <input type="checkbox" name="Preferencias" value="@preferencia" @(Model != null && Model.Preferencias.Contains(preferencia) ? "checked" : "") />
                        @preferencia
                    </label>
                }
            </div>
        </div>

        <div class="presupuesto">
            <h2>¿Cuál es tu presupuesto estimado?</h2>
            <div>
                <label>
                    <input type="radio" name="Presupuesto" value="Económico" required @(Model != null && Model.Presupuesto == "Económico" ? "checked" : "") /> Económico (hasta $50 USD)
                </label>
                <label>
                    <input type="radio" name="Presupuesto" value="Medio" required @(Model != null && Model.Presupuesto == "Medio" ? "checked" : "") /> Medio (hasta $120 USD)
                </label>
                <label>
                    <input type="radio" name="Presupuesto" value="Premium" required @(Model != null && Model.Presupuesto == "Premium" ? "checked" : "") /> Premium (desde $120 USD)
                </label>
            </div>
        </div>

        <div class="frecuenciaRutinaria">
            <h2>¿Cuál es tu frecuencia de rutina ideal?</h2>
            <div>
                <label>
                    <input type="radio" name="Frecuencia" value="Diaria" required @(Model != null && Model.Frecuencia == "Diaria" ? "checked" : "") /> Diaria
                </label>
                <label>
                    <input type="radio" name="Frecuencia" value="3 veces por semana" required @(Model != null && Model.Frecuencia == "3 veces por semana" ? "checked" : "") /> 3 veces por semana
                </label>
                <label>
                    <input type="radio" name="Frecuencia" value="1 vez por semana" required @(Model != null && Model.Frecuencia == "1 vez por semana" ? "checked" : "") /> 1 vez por semana
                </label>
            </div>
        </div>

        <div class="submitButton">
            <button type="submit">Guardar Rutina</button>
        </div>

    </section>
</form>

@section Scripts {
    <script src="~/js/formularioRutina.js"></script>
}