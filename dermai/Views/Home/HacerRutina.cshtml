@model dermai.Models.PielFormModel //PROBLEMA CON ESTO; NO EMPIEZA EL PROGRAMA

<form asp-action="GuardarRutinaModificada" asp-controller="Home" method="post">
    <section class="hacerRutina">
        <div class="características">
            <h2>¿Qué características tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var caracteristica in new[] {
                    "Piel sensible", "Enrojecimiento frecuente", "Tendencia al acné", "Sequedad / descamación",
                    "Opacidad / falta de luminosidad", "Poros dilatados", "Puntos negros",
                    "Manchas oscuras / hiperpigmentación", "Textura irregular", "Exceso de grasa / brillo",
                    "Líneas de expresión / arrugas"
                }) {
                    <label>
                        <input type="checkbox" name="Caracteristicas" value="@caracteristica"
                            @if (Model.Caracteristicas != null && Model.Caracteristicas.Contains(caracteristica)) { @:checked }
                        /> @caracteristica
                    </label>
                }
            </div>
        </div>

        <div class="preferencias">
            <h2>¿Qué preferencias de productos tenés?</h2>
            <h3>(Podés elegir varias opciones)</h3>
            <div>
                @foreach (var preferencia in new[] {
                    "Productos sin fragancia", "Sin alcohol", "Silicona",
                    "Ingredientes naturales / orgánicos", "Sin parabenos", "Cruelty-Free", "Vegano"
                }) {
                    <label>
                        <input type="checkbox" name="Preferencias" value="@preferencia"
                            @if (Model.Preferencias != null && Model.Preferencias.Contains(preferencia)) { @:checked }
                        /> @preferencia
                    </label>
                }
            </div>
        </div>

        <div class="presupuesto">
            <h2>¿Cuál es tu presupuesto estimado?</h2>
            <div>
                <label><input type="radio" asp-for="Presupuesto" value="Económico"
                    @if (Model.Presupuesto == "Económico") { @:checked } /> Económico (hasta $50 USD)</label>
                <label><input type="radio" asp-for="Presupuesto" value="Medio"
                    @if (Model.Presupuesto == "Medio") { @:checked } /> Medio (hasta $120 USD)</label>
                <label><input type="radio" asp-for="Presupuesto" value="Premium"
                    @if (Model.Presupuesto == "Premium") { @:checked } /> Premium (desde $120 USD)</label>
            </div>
        </div>

        <div class="frecuenciaRutinaria">
            <h2>¿Cuál es tu frecuencia de rutina ideal?</h2>
            <div>
                <label><input type="radio" asp-for="Frecuencia" value="Simple"
                    @if (Model.Frecuencia == "Simple") { @:checked } /> Rutina simple (1-3 pasos)</label>
                <label><input type="radio" asp-for="Frecuencia" value="Intermedia"
                    @if (Model.Frecuencia == "Intermedia") { @:checked } /> Rutina intermedia (4-5 pasos)</label>
                <label><input type="radio" asp-for="Frecuencia" value="Completa"
                    @if (Model.Frecuencia == "Completa") { @:checked } /> Rutina completa (6+ pasos)</label>
            </div>
        </div>

        <input type="submit" value="Enviar" class="btn btn-primary mt-3">
    </section>
</form>