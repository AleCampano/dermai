@{
    ViewData["Title"] = "Mi Rutina de Cuidado de Piel";
}

<section class="contenedor">
    <h1>✨ Mi Rutina Personalizada ✨</h1>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert-alert-warning">
            <p>@ViewBag.Mensaje</p>
            <a href='@Url.Action("CompletarFormularioRutina", "User")' class="btn btn-secondary mt-3">Crear mi rutina ahora</a>
        </div>
    }
    
    @if (ViewBag.Rutina != null)
    {
        <div class="rutina-generada-ia">
            @* La rutina viene en formato de texto plano, se usa un pre-formato o se procesa el texto *@
            <pre style="white-space: pre-wrap; font-family: inherit; background-color: #f8f9fa; padding: 15px; border-radius: 5px; border: 1px solid #dee2e6;">@ViewBag.Rutina</pre>
        </div>
    }
    else if (ViewBag.Mensaje == null)
    {
        <div class="alert alert-info">
             <p>Aún no tienes una rutina. Completa tu perfil para que la IA pueda generarla.</p>
             <a href='@Url.Action("CompletarFormularioRutina", "User")' class="btn btn-secondary mt-3">Ir al Formulario</a>
        </div>
    }

    <div class="feedback-boton mt-4">
        @* Este botón podría redirigir a modificar la rutina si el usuario no está satisfecho *@
        <a href='@Url.Action("ModificarRutina", "Home")' class="btn btn-outline-primary">Modificar/Regenerar Rutina</a>
    </div>

    <a href='@Url.Action("InicioA", "Home")'>Volver</a>
</section>